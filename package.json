{
  "name": "next-apollo-demo",
  "version": "0.0.1",
  "description": "apollo demo",
  "main": "dist/index.js",
  "license": "",
  "types": "dist/index.d.ts",
  "engines": {
    "node": "^14",
    "npm": "^6"
  },
  "scripts": {
    "postinstall": "npm --prefix client install && npm --prefix server install",
    "build": "npm run clean && tsc -p tsconfig.json",
    "clean": "rm -rf dist",
    "dev": "concurrently \"npm run type-check:watch\" \"npm run lint:watch -- --fix\"",
    "lint": "eslint '**/*.{ts,js}'",
    "lint:watch": "esw --ext .ts -w '**/*.{ts,js}' --color",
    "start": "",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "jest",
    "type-check:watch": "npm run build -- --watch",
    "preversion": "npm run build && npm test",
    "version": "git add -A dist",
    "postversion": "git push --no-verify && git push --tags --no-verify"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/leinaDBA/next-apollo-demo.git"
  },
  "keywords": [],
  "author": "Daniel Lee",
  "dependencies": {},
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@types/sinon": "^9.0.10",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "concurrently": "^5.3.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-watch": "^7.0.0",
    "jest": "^26.6.3",
    "pre-push": "^0.1.1",
    "prettier": "^2.2.1",
    "sinon": "^9.2.4",
    "ts-jest": "^26.5.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.1.5"
  },
  "pre-push": [
    "test"
  ]
